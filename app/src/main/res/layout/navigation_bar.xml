<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:padding="3dp"
        >

        <RadioButton
            android:id="@+id/radio_calendar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingTop="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/calendar_40"
            android:checked="true"
            android:button="@null" />

        <RadioButton
            android:id="@+id/radio_finding"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingTop="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/find_40"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/radio_goals"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingTop="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/goal_40"
            android:button="@null"
             />

        <RadioButton
            android:id="@+id/radio_user"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingTop="3dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/setting_40"
            android:button="@null" />

    </LinearLayout>

</RadioGroup>