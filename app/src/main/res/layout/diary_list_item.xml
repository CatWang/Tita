<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_marginLeft="@dimen/half_margin"
    android:layout_marginRight="@dimen/half_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/diary_list_item_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diary_main_photo_imageview"
            android:layout_width="@dimen/thumb_size"
            android:layout_height="@dimen/thumb_size"
            android:background="@color/colorTransparentBlack"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/half_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diary_main_title_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_weight="1.8"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/diary_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/subheading" />

            <TextView
                android:id="@+id/diary_main_datetime_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="@string/diary_datetime"
                android:maxLines="1" />

            <TextView
                android:id="@+id/diary_main_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/small_tiny_margin"
                android:layout_weight="2"
                android:maxLines="3"
                android:text="@string/diary_detail" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>