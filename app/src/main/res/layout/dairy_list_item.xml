<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_marginLeft="@dimen/half_margin"
    android:layout_marginRight="@dimen/half_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_trash"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:id="@+id/diary_list_item_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <!--<ImageView-->
                <!--android:id="@+id/diary_main_photo_imageview"-->
                <!--android:layout_width="@dimen/thumb_size"-->
                <!--android:layout_height="@dimen/thumb_size"-->
                <!--android:src="@drawable/ic_cal_40"-->
                <!--android:layout_gravity="center"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/half_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diary_main_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_weight="2.2"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/diary_title"
                    android:textColor="@color/colorTextButton"
                    android:textStyle="bold"
                    android:textSize="@dimen/subheading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/diary_main_location_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/small_tiny_margin"
                        android:textSize="12dp"
                        android:text="@string/diary_detail"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_time"/>

                    <TextView
                        android:id="@+id/diary_main_datetime_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/small_tiny_margin"
                        android:textSize="12dp"
                        android:text="@string/diary_datetime"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>